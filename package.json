{
  "name": "hardhat-project",
  "files": [
    "artifacts/",
    "contracts/"
  ],
  "scripts": {
    "node": "npx hardhat node",
    "clean": "npx hardhat clean",
    "test": "npx hardhat test --network hardhat",
    "coverage": "npx hardhat coverage",
    "compile": "npx hardhat compile --network abstractTestnet",
    "deploy:main": "npx hardhat compile --network abstractMainnet && npx hardhat deploy-zksync --script deploy.ts --network abstractMainnet",
    "deploy:test": "npx hardhat compile --network abstractTestnet && npx hardhat deploy-zksync --script deploy.ts --network abstractTestnet"
  },
  "devDependencies": {
    "@matterlabs/hardhat-zksync": "^1.5.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "ethers": "^6.13.5",
    "hardhat": "^2.23.0",
    "prettier": "^3.5.3",
    "prettier-plugin-solidity": "^1.4.2",
    "solhint": "^5.0.5",
    "solhint-plugin-prettier": "^0.1.0",
    "zksync-ethers": "^6.17.0"
  },
  "dependencies": {
    "@matterlabs/zksync-contracts": "1.0.0-beta.4",
    "@openzeppelin/contracts": "^5.3.0"
  }
}
